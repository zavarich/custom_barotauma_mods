      </StatusEffect>
      <StatusEffect Target="Character" comparison="and" stackable="false">
        <Conditional IsLocalPlayer="True" />
        <Conditional biohuskinfection="gt 95" />
        <Conditional biohuskinfection="lt 95.5" />
        <Conditional IsDead="false" />
        <Conditional IsUnconscious="false" />
        <sound file="%ModDir%/CustomSounds/Infection/turned1.ogg" Volume="1" DontMuffle="True" Loop="False" SelectionMode="Random" />
      </StatusEffect>
      <StatusEffect Target="Character" stackable="false">
        <Conditional biohuskinfection="gt 95" />
        <Conditional biohuskinfection="lt 95.5" />
        <Conditional IsDead="false" />
        <sound file="%ModDir%/CustomSounds/Infection/bonecrackle.ogg" Volume="1.25" Loop="False" />
      </StatusEffect>
      <StatusEffect Target="Character" comparison="and" stackable="false">
        <Conditional IsLocalPlayer="True" />
        <Conditional biohuskinfection="gte 90" />
        <Conditional IsDead="false" />
        <Conditional IsUnconscious="true" />
        <sound file="%ModDir%/CustomSounds/Infection/deathsdoor2.ogg" Volume="1.5" DontMuffle="True" Loop="False" SelectionMode="Random" />
      </StatusEffect>
    </Effect>
    <!-- reduce oxygen low -->
    <PeriodicEffect mininterval="3" maxinterval="6">
      <StatusEffect target="Character" checkconditionalalways="true" comparison="and">
        <Conditional biohuskinfection="gte 60.0" />
        <Conditional isunconscious="false" />
        <Reduceaffliction identifier="Oxygenlow" amount="15" />
      </StatusEffect>
      <!-- slowly heal if they have a good amount of husk infection and are unconscious -->
      <StatusEffect target="Character" comparison="and">
        <Conditional isdead="false" />
        <Conditional isunconscious="true" />
        <Conditional speciesname="human" />
        <Conditional biohuskinfection="gt 25" />
        <Conditional biohuskinfection="lt 95" />
        <ReduceAffliction type="damage" strength="2.5" />
      </StatusEffect>
    </PeriodicEffect>
    <!-- worm sounds -->
    <PeriodicEffect mininterval="10" maxinterval="16">
      <StatusEffect target="Character" targetlimbs="Head" comparison="and">
        <Conditional biohuskinfection="gt 60" />
        <Conditional biohuskinfection="lt 95" />
        <Conditional speciesname="human" />
        <Conditional IsDead="false" />
        <sound file="%ModDir%/CustomSounds/Infection/wormcrawl1.ogg" range="300" volume="0.6" loop="false" selectionmode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/wormcrawl2.ogg" range="300" volume="0.6" loop="false" selectionmode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/wormcrawl3.ogg" range="300" volume="0.6" loop="false" selectionmode="Random" />
      </StatusEffect>
    </PeriodicEffect>
    <!-- vigorous periodic vomiting begins at 75%. By this time the patient is too far gone. -->
    <PeriodicEffect mininterval="12" maxinterval="24">
      <StatusEffect target="Character" targetlimb="Head" stackable="False" comparison="and" duration="3">
        <Conditional isdead="false" />
        <Conditional SpeciesName="human" />
        <Conditional biohuskinfection="gt 75" />
        <Explosion range="185.0" structuredamage="0" itemdamage="0" force="0.1" severlimbsprobability="0.0" decal="blood" decalsize="0.85" shockwave="false" underwaterbubble="false" flames="false" sparks="false" flash="false" smoke="false" playtinnitus="true">
          <Affliction identifier="biovomitexposure" amount="10" />
          <Affliction identifier="phasedblur" amount="4" />
        </Explosion>
        <ParticleEmitter particle="vomitsplash" copyentityangle="true" anglemin="-12" anglemax="12" particlespersecond="35" velocitymin="65" velocitymax="90" scalemin="0.05" scalemax="0.15" />
        <ParticleEmitter particle="bloodspurtsplashdemon" copyentityangle="true" anglemin="-12" anglemax="12" particlespersecond="85" velocitymin="60" velocitymax="95" scalemin="0.05" scalemax="0.2" />
        <Affliction identifier="phasedblur" amount="4" />
        <sound File="%ModDir%/CustomSounds/Husk/vomit1.ogg" Range="1400" Volume="1.5" selectionmode="Random" />
        <sound File="%ModDir%/CustomSounds/Husk/vomit2.ogg" Range="1400" Volume="1.5" selectionmode="Random" />
        <sound File="%ModDir%/CustomSounds/Husk/vomit3.ogg" Range="1400" Volume="1.5" selectionmode="Random" />
        <sound File="%ModDir%/CustomSounds/Husk/vomit4.ogg" Range="1400" Volume="1.5" selectionmode="Random" />
        <StatusEffect target="Character" lowpassmultiplier="0.8" setvalue="True" />
      </StatusEffect>
    </PeriodicEffect>
    <!-- periodically damage the player after 95% -->
    <PeriodicEffect mininterval="0.35" maxinterval="0.5">
      <StatusEffect target="Character" stackable="true" comparison="and" forceplaysounds="true">
        <Conditional biohuskinfection="gte 95.0" />
        <Conditional isdead="false" />
        <ParticleEmitter particle="bloodsplash" particlespersecond="100" scalemin="0.7" scalemax="1.4" velocitymin="60" velocitymax="200" anglemin="0" anglemax="360" />
        <ParticleEmitter particle="blackblood" particlespersecond="100" scalemin="0.85" scalemax="1.35" velocitymin="20" velocitymax="120" anglemin="0" anglemax="360" />
        <ParticleEmitter particle="waterblood" particlespersecond="100" scalemin="0.85" scalemax="1.35" velocitymin="20" velocitymax="120" anglemin="0" anglemax="360" />
        <ParticleEmitter particle="blackwaterblood" particlespersecond="100" scalemin="0.85" scalemax="1.35" velocitymin="20" velocitymax="120" anglemin="0" anglemax="360" />
        <Affliction identifier="internaldamage" amount="0.5" />
        <Affliction identifier="phasedblur" amount="1" />
        <Affliction identifier="stun" amount="2" />
        <!-- begin violent convulsions, flinging blood everywhere -->
        <Explosion range="50.0" structuredamage="0" itemdamage="0" force="10" severlimbsprobability="0.0" decal="blood" decalsize="0.85" shockwave="false" underwaterbubble="false" flames="false" sparks="false" flash="false" smoke="false" playtinnitus="true">
          <Affliction identifier="bloodexposure" amount="3" />
          <Affliction identifier="phasedblur" amount="1" />
        </Explosion>
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn1.ogg" Volume="1.2" SelectionMode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn2.ogg" Volume="1.2" SelectionMode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn3.ogg" Volume="1.2" SelectionMode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn4.ogg" Volume="1.2" SelectionMode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn5.ogg" Volume="1.2" SelectionMode="Random" />
        <sound file="%ModDir%/CustomSounds/Infection/gore_turn6.ogg" Volume="1.2" SelectionMode="Random" />
      </StatusEffect>
    </PeriodicEffect>
    <icon texture="%ModDir%/Afflictions/biohusk.png" sourcerect="0,0,128,128" color="55,102,190,255" origin="0,0" />
  </AfflictionHusk>
