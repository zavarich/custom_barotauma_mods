    <Effect minscreenblur="0.1" maxscreenblur="0.3" minscreendistort="0" maxscreendistort="1.0" minradialdistort="0.0" maxradialdistort="1.0" minstrength="0" maxstrength="10" strengthchange="-2" minafflictionoverlayalphamultiplier="0.0" maxafflictionoverlayalphamultiplier="0.5" minspeedmultiplier="1.0" maxspeedmultiplier="0.5">
