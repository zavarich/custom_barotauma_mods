<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <Item name="" HideConditionBar="true" identifier="assaultrifle" category="Weapon" cargocontaineridentifier="metalcrate" allowasextracargo="true" tags="mediumitem,weapon,gun,gunsmith,mountableweapon,provocativetohumanai" Scale="0.5" impactsoundtag="impact_metal_light">
      <PreferredContainer primary="secarmcab" secondary="armcab,weaponholder" />
      <Price baseprice="720" sold="false">
        <Price storeidentifier="merchantoutpost" multiplier="1.5" />
        <Price storeidentifier="merchantcity" multiplier="1.25" />
        <Price storeidentifier="merchantresearch" multiplier="1.25" />
        <Price storeidentifier="merchantmilitary" multiplier="0.9" />
        <Price storeidentifier="merchantmine" multiplier="1.25" />
      </Price>
      <Fabricate suitablefabricators="fabricator" requiredtime="75" requiresrecipe="true">
        <RequiredSkill identifier="weapons" level="65" />
        <RequiredItem identifier="physicorium" amount="2" />
        <RequiredItem identifier="titaniumaluminiumalloy" amount="3" />
        <RequiredItem identifier="rubber" />
      </Fabricate>
      <Deconstruct time="35">
        <Item identifier="physicorium" amount="2" />
        <Item identifier="titaniumaluminiumalloy" amount="2" />
        <Item identifier="rubber" />
      </Deconstruct>
      <InventoryIcon texture="%ModDir%/AssaultRifle/AssaultRifle.png" sourcerect="0,0,219,60" origin="0.5,0.5" />
      <Sprite texture="%ModDir%/AssaultRifle/AssaultRifle.png" sourcerect="0,0,219,60" depth="0.55" origin="0.5,0.15" />
      <!-- Broken sprite used for animation via changing gun's condition. -->
      <BrokenSprite texture="%ModDir%/AssaultRifle/AssaultRifle.png" sourcerect="0,60,219,60" depth="0.55" origin="0.5,0.15" maxcondition="50" />
      <BrokenSprite texture="%ModDir%/AssaultRifle/AssaultRifle.png" sourcerect="0,0,219,60" depth="0.55" origin="0.5,0.15" maxcondition="0" />
      <Body width="220" height="50" density="25" />
      <Holdable slots="RightHand+LeftHand" controlpose="true" holdpos="40,-20" aimpos="50,1" handle1="-35,-30" handle2="26,-10" holdangle="-30">
        <StatusEffect type="OnActive" target="Character" SpeedMultiplier="0.9" setvalue="true" />
      </Holdable>
      <Wearable slots="Bag" msg="ItemMsgEquipSelect" canbeselected="false" canbepicked="true" pickkey="Select">
        <sprite name="Assault Rifle Worn" texture="%ModDir%/AssaultRifle/AssaultRifle.png" canbehiddenbyotherwearables="false" rotation="90" depth="0.6" sourcerect="0,0,219,60" limb="Torso" depthlimb="LeftArm" scale="0.5" origin="0.5,0.8" />
      </Wearable>
      <RangedWeapon reload="0.24" holdtrigger="true" barrelpos="110,-5" spread="4" unskilledspread="16" combatPriority="80" drawhudwhenequipped="true" crosshairscale="0.2" DualWieldAccuracyPenalty="1">
        <!-- Crosshairs. -->
        <Crosshair texture="%ModDir%/Crosshairs.png" sourcerect="255,0,256,256" />
        <CrosshairPointer texture="%ModDir%/Crosshairs.png" sourcerect="0,0,256,256" />
        <!-- Particles. -->
        <!-- Visible only on air. -->
        <ParticleEmitter particle="mediummuzzleflash" particleamount="1" />
        <ParticleEmitter particle="muzzlelight" particleamount="1" scalemultiplier="4,2" colormultiplier="255,255,100,175" CopyEntityAngle="true" />
        <ParticleEmitter particle="muzzlelight" particleamount="1" scalemultiplier="10,8" colormultiplier="215,215,215,100" CopyEntityAngle="true" />
        <ParticleEmitter particle="mediumgunsmoke" particleamount="1" />
        <!-- Visible only inside water. -->
        <ParticleEmitter particle="underwatermuzzle" particleamount="1" velocitymin="0" velocitymax="0" scalemultiplier="1.5,1.5" />
        <ParticleEmitter particle="muzzlebubbles" particleamount="6" anglemin="30" anglemax="80" velocitymin="20" velocitymax="50" />
        <ParticleEmitter particle="gunbubbles" particleamount="12" anglemin="170" anglemax="180" velocitymin="10" velocitymax="20" distancemin="0" distancemax="90" />
        <!-- Gunfire sounds. -->
        <Sound file="Content/Items/JobGear/Security/WEAPONS_assaultRifle_1.ogg" type="OnUse" range="3000" selectionmode="Random" />
        <Sound file="Content/Items/JobGear/Security/WEAPONS_assaultRifle_2.ogg" type="OnUse" range="3000" />
        <Sound file="Content/Items/JobGear/Security/WEAPONS_assaultRifle_3.ogg" type="OnUse" range="3000" />
        <Sound file="Content/Items/JobGear/Security/WEAPONS_assaultRifle_4.ogg" type="OnUse" range="3000" />
        <Sound file="Content/Items/JobGear/Security/WEAPONS_assaultRifle_5.ogg" type="OnUse" range="3000" />
        <!-- Unskilled high recoil. -->
        <StatusEffect type="OnUse" target="Character" targetlimbs="LeftHand,RightHand">
          <Conditional skillrequirement="true" weapons="lt 50" />
          <Affliction identifier="blunttrauma" strength="50" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="This" offset="0,-5">
          <Conditional targetcontainer="true" skillrequirement="true" weapons="lt 50" />
          <Explosion range="50.0" force="2" shockwave="false" smoke="false" flames="false" sparks="false" underwaterbubble="false" camerashake="17.0" />
        </StatusEffect>
        <!-- Skilled low recoil. -->
        <StatusEffect type="OnUse" target="This" offset="0,-5">
          <Conditional targetcontainer="true" skillrequirement="true" weapons="gte 50" />
          <Explosion range="150.0" force="1" shockwave="false" smoke="false" flames="false" sparks="false" underwaterbubble="false" camerashake="6.0" />
        </StatusEffect>
        <!-- Sets condition to 1, which triggers 'animation' via brokensprite, changing the sprite. -->
        <StatusEffect type="OnUse" target="This" condition="1" setvalue="true">
          <ParticleEmitter particle="assammocasing" particleamount="1" anglemin="120" anglemax="150" velocitymin="200" velocitymax="250" CopyEntityAngle="true" />
        </StatusEffect>
        <!-- OnUse, activates an item component, which triggers status effects inside. -->
        <StatusEffect type="OnUse" target="This" targetitemcomponent="ItemComponent" isActive="true">
          <RequiredItems items="assaultrifleammo" type="Contained" />
        </StatusEffect>
        <!-- Uses magazine. -->
        <StatusEffect type="OnUse" target="Contained" targetidentifiers="assaultrifleammo">
          <Use />
        </StatusEffect>
        <!-- Sets condition back to 100. -->
        <StatusEffect type="OnUse" target="This" delay="0.22" condition="100" setvalue="true" />
        <!-- Sets magic number to 1. -->
        <StatusEffect type="OnUse" target="This" DualWieldAccuracyPenalty="1" setvalue="true" />
        <!-- OnUse, breaks the chamber. -->
        <StatusEffect type="OnUse" target="Contained" targetidentifiers="asschamber" condition="0" setvalue="true" />
        <!-- OnBroken (when condition is set to 0 from OnInserted status effects in Containable intended for reloading animation),
      Proxy item's condition will be set to 0 and back to 100 after a delay. -->
        <StatusEffect type="OnBroken" target="Contained" targetidentifiers="assreloading" delay="0.01" condition="0" setvalue="true" />
        <StatusEffect type="OnBroken" target="Contained" targetidentifiers="assreloading" delay="1.7" condition="100" setvalue="true" />
        <!-- OnBroken, fixes the chamber. -->
        <StatusEffect type="OnBroken" target="Contained" targetidentifiers="asschamber" condition="100" setvalue="true" delay="1.4" />
        <!-- OnBroken, activates the chamber. -->
        <StatusEffect type="OnBroken" target="Contained" targetidentifiers="asschamber" CheckConditionalAlways="true" delay="1.5">
          <Conditional targetcontainer="true" targetitemcomponent="Rangedweapon" DualWieldAccuracyPenalty="eq 2" />
          <Use />
        </StatusEffect>
        <!-- Fail safe if the players save and quit during the reloading or shooting. Sets the gun's values to default. -->
        <StatusEffect Type="Always" OneShot="True" target="Contained" targetidentifiers="assreloading" condition="100" setvalue="true" />
        <StatusEffect Type="Always" OneShot="True" target="This" holdpos="40,-20" aimpos="50,1" handle1="-35,-30" handle2="26,-10" holdangle="-30" aimangle="0" condition="100" setvalue="true" />
        <StatusEffect type="Always" OneShot="True" targetitemcomponent="LightComponent" target="This" lightcolor="255,255,75,0" setvalue="true" />
        <StatusEffect type="Always" OneShot="True" targetitemcomponent="ItemContainer" target="This" AllowAccess="true" setvalue="true" />
        <StatusEffect type="Always" OneShot="True" target="This" hideitems="false" setvalue="true" />
        <!-- On fire, sets the light component's transparency to 255 and then back to 0.
	  Why? Simply turning the light on and off is too slow. -->
        <StatusEffect type="OnUse" targetitemcomponent="LightComponent" target="This" lightcolor="255,255,75,255" setvalue="true" />
        <StatusEffect type="OnUse" targetitemcomponent="LightComponent" target="This" lightcolor="255,255,75,0" setvalue="true" delay="0.115" />
        <!-- Gun requires ammo to use. -->
        <RequiredItems items="asschamber" type="Contained" />
        <!-- Gun requires proxy item to use. During the reloading, the proxy item's condition is set to 0, preventing the item from firing. -->
        <RequiredItems items="assreloading" type="Contained" />
        <RequiredSkill identifier="weapons" level="60" />
      </RangedWeapon>
      <!-- Does check of magazine, immediately turns off on same tick. -->
      <ItemComponent isActive="false">
        <!-- Spawns a bullet inside the chamber. -->
        <StatusEffect type="OnActive" target="Contained" delay="0.1" targetidentifiers="asschamber">
          <Use />
        </StatusEffect>
        <!-- Sets magic number to 2. -->
        <StatusEffect type="OnActive" target="This" delay="0.1" DualWieldAccuracyPenalty="2" setvalue="true" />
        <!-- OnActive, fixes the chamber. -->
        <StatusEffect type="OnActive" target="Contained" targetidentifiers="asschamber" condition="100" setvalue="true" />
        <!-- OnActive, disables the item component. -->
        <StatusEffect type="OnActive" target="This" targetitemcomponent="ItemComponent" isActive="false" />
      </ItemComponent>
      <!-- Gun's muzzle which works like a light component. -->
      <LightComponent range="55.0" lightcolor="255,255,75,0" IsOn="true">
        <LightTexture texture="%ModDir%/AssaultRifle/AssaultRifleMuzzle.png" origin="0.5,0.6" size="1.0,1.0" />
      </LightComponent>
      <ItemContainer capacity="1" maxstacksize="1" hideitems="false" containedstateindicatorslot="0" containedstateindicatorstyle="bullet" containedspritedepth="0.56">
        <Containable items="assaultrifleammo" itempos="2,-20">
          <!-- When a non-empty magazine is inserted, runs itemcomponent logic. -->
          <StatusEffect type="OnInserted" target="This" targetitemcomponent="ItemComponent" isActive="true" setvalue="true" />
          <!-- Hides the slots, preventing the person from adding more or removing. -->
          <StatusEffect type="OnInserted" target="This" AllowAccess="false" delay="0.01" setvalue="true" />
          <!-- Unhides the slots, allowing the person from adding more or removing. -->
          <StatusEffect type="OnInserted" target="This" AllowAccess="true" delay="1.9" setvalue="true" />
          <!-- Makes the magazine invisible. -->
          <StatusEffect type="OnInserted" target="This" hideitems="true" delay="0.01" setvalue="true" />
          <!-- Upon reloading, sets the condition to 0, triggering OnBroken status effect.
        On top of that, triggers reload animations and blah blah blah.
        Condition=0 is set with a delay to not cause any issues with OnRemoved status effects. -->
          <!-- Sets gun position and hand to magazine. -->
          <StatusEffect type="OnInserted" target="This" handle2="-3,-30" condition="0" handle1="-15,-5" holdpos="40,0" aimpos="50,1" holdangle="-10" aimangle="-10" delay="0.01" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
            <Sound file="%ModDir%/AssaultRifle/AssaultRifleEjectPortOpen.ogg" type="OnUse" range="1000" />
          </StatusEffect>
          <StatusEffect type="OnInserted" target="This" condition="50" delay="0.1" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
          </StatusEffect>
          <!-- Plays magazine insert sound. -->
          <StatusEffect type="OnInserted" target="This" delay="0.4" forceplaysounds="true">
            <Sound file="%ModDir%/AssaultRifle/AssaultRifleMagAttach.ogg" type="OnUse" range="1000" />
            <Conditional DualWieldAccuracyPenalty="eq 1" />
          </StatusEffect>
          <!-- Sets hand's position to magazine. -->
          <StatusEffect type="OnInserted" target="This" handle2="-3,-50" delay="0.5" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
          </StatusEffect>
          <!-- Makes the magazine visible. -->
          <StatusEffect type="OnInserted" target="This" hideitems="false" delay="0.5" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
            <ParticleEmitter particle="gunbubbles" particleamount="5" anglemin="260" anglemax="280" velocitymin="10" velocitymax="20" distancemin="20" distancemax="30" />
          </StatusEffect>
          <!-- Puts hand back. -->
          <StatusEffect type="OnInserted" target="This" handle2="26,-10" delay="1" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
          </StatusEffect>
          <!-- Plays sound. -->
          <StatusEffect type="OnInserted" target="This" delay="1.4" setvalue="true" forceplaysounds="true">
            <Sound file="%ModDir%/AssaultRifle/AssaultRifleEjectPortClose.ogg" type="OnUse" range="1000" />
            <Conditional DualWieldAccuracyPenalty="eq 1" />
          </StatusEffect>
          <!-- Closes eject port. -->
          <StatusEffect type="OnInserted" target="This" condition="100" holdpos="60,0" aimpos="70,0" handle1="10,-5" delay="1.5" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 1" />
            <ParticleEmitter particle="gunbubbles" particleamount="2" anglemin="170" anglemax="190" velocitymin="10" velocitymax="20" distancemin="-5" distancemax="5" />
          </StatusEffect>
          <!-- Sets gun position and hand to magazine. -->
          <StatusEffect type="OnInserted" target="This" handle2="-3,-30" condition="0" holdpos="40,0" aimpos="50,1" holdangle="-10" aimangle="-10" delay="0.01" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 2" />
          </StatusEffect>
          <!-- Plays magazine insert sound. -->
          <StatusEffect type="OnInserted" target="This" delay="0.4" forceplaysounds="true">
            <Sound file="%ModDir%/AssaultRifle/AssaultRifleMagAttach.ogg" type="OnUse" range="1000" />
            <Conditional DualWieldAccuracyPenalty="eq 2" />
          </StatusEffect>
          <!-- Sets hand's position to magazine. -->
          <StatusEffect type="OnInserted" target="This" handle2="-3,-50" delay="0.7" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 2" />
          </StatusEffect>
          <!-- Makes the magazine visible. -->
          <StatusEffect type="OnInserted" target="This" hideitems="false" delay="0.7" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 2" />
            <ParticleEmitter particle="gunbubbles" particleamount="5" anglemin="260" anglemax="280" velocitymin="10" velocitymax="20" distancemin="20" distancemax="30" />
          </StatusEffect>
          <!-- Puts hand back. -->
          <StatusEffect type="OnInserted" target="This" handle2="26,-10" delay="1.3" setvalue="true">
            <Conditional DualWieldAccuracyPenalty="eq 2" />
          </StatusEffect>
          <!-- Sets everything to default. -->
          <StatusEffect type="OnInserted" target="This" holdpos="40,-20" handle1="-35,-30" holdangle="-30" condition="100" aimpos="50,1" aimangle="0" delay="1.7" setvalue="true" />
        </Containable>
        <SlotIcon slotindex="0" texture="Content/UI/StatusMonitorUI.png" sourcerect="256,448,64,64" origin="0.5,0.5" />
        <SlotIcon slotindex="1" texture="Content/UI/StatusMonitorUI.png" sourcerect="320,448,64,64" origin="0.5,0.5" />
        <SubContainer capacity="1" maxstacksize="1">
          <Containable items="flashlight" hide="false" itempos="30,-8" setactive="true" />
          <Containable items="scope" hide="false" itempos="0,7">
            <StatusEffect type="OnContaining" target="This" cameraaimoffset="500" setvalue="true" interval="1" />
            <StatusEffect type="OnRemoved" target="This" cameraaimoffset="0" setvalue="true" />
          </Containable>
        </SubContainer>
      </ItemContainer>
      <!-- Where reloading proxy item is located. -->
      <ItemContainer capacity="1" maxstacksize="1" hideitems="true" drawinventory="false" spawnwithid="assreloading" removecontaineditemsondeconstruct="true">
        <!-- RemoveContainedItemsOnDeconstruct removes proxy on deconstruction. -->&gt;
        <Containable items="assreloading" hide="true" /></ItemContainer>
      <!-- Where chamber proxy item is located. -->
      <ItemContainer capacity="1" maxstacksize="1" hideitems="true" drawinventory="false" spawnwithid="asschamber" removecontaineditemsondeconstruct="true">
        <!-- RemoveContainedItemsOnDeconstruct removes proxy on deconstruction. -->&gt;
        <Containable items="asschamber" hide="true" /></ItemContainer>
      <aitarget sightrange="2000" soundrange="4000" fadeouttime="5" />
      <Quality>
        <QualityStat stattype="FirepowerMultiplier" value="0.1" />
      </Quality>
      <SkillRequirementHint identifier="weapons" level="60" />
    </Item>
    <!-- Proxy item for reloading. -->
    <Item name=" " identifier="assreloading" maxstacksize="1" scale="0.5" category="Weapon" NonInteractable="True" hideinmenus="true" tags="smallitem,assreloading">
      <InventoryIcon texture="%ModDir%/Ammunition.png" sourcerect="308,64,64,64" origin="0.5,0.5" />
      <Sprite texture="Content/Items/Weapons/weapons_new.png" sourcerect="195,282,17,6" depth="0.55" origin="0.5,0.5" />
      <Body width="5" height="5" density="25" />
      <Holdable canBeCombined="true" slots="Any,RightHand,LeftHand" handle1="0,0" msg="ItemMsgPickUpSelect" />
    </Item>
    <!-- Proxy item for chamber. -->
    <Item name=" " identifier="asschamber" maxstacksize="1" scale="0.5" condition="0" category="Weapon" NonInteractable="True" hideinmenus="true" tags="smallitem,asschamber">
      <InventoryIcon texture="%ModDir%/Ammunition.png" sourcerect="308,64,64,64" origin="0.5,0.5" />
      <Sprite texture="Content/Items/Weapons/weapons_new.png" sourcerect="195,282,17,6" depth="0.55" origin="0.5,0.5" />
      <Body width="5" height="5" density="25" />
      <Holdable canBeCombined="true" slots="Any,RightHand,LeftHand" handle1="0,0" msg="ItemMsgPickUpSelect" />
      <ItemContainer hideitems="true" capacity="1" drawinventory="false" canbeselected="false" SpawnWithId="assaultrifleround" ShowConditionInContainedStateIndicator="true" removecontaineditemsondeconstruct="true" containedstateindicatorstyle="bullet">
        <Containable items="assaultrifleround" />
        <StatusEffect type="OnUse" target="This" AllowWhenBroken="true">
          <SpawnItem identifiers="assaultrifleround" spawnposition="ThisInventory" />
        </StatusEffect>
      </ItemContainer>
    </Item>
  </Items>
</Override>